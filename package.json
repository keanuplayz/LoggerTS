{
  "name": "logger-ts",
  "version": "0.1.0",
  "description": "Discord message logger by Zeehondie rewritten to TypeScript.",
  "license": "GPL-3.0",
  "repository": {
    "url": "https://github.com/keanuplayz/LoggerTS"
  },
  "main": "./dist/main.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "clean": "rm -r dist",
